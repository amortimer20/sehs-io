---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Code Challenges">
    <div class="p-5 mb-3 bg-gray">
        <a href="/" class="text-white">‚Üê Back</a>
        <div class="container justify-content-center">
            <div class="text-center">
                <h1 class="text-white">Code Challenges</h1>
                <img src="/courses/code-challenges/code-challenges-logo.png" alt="Code Challenges Logo">
            </div>
        </div>
    </div>

    <div class="container">
        
        <h3>Solving Code Challenges</h3>
        <p><a href="./code-challenge-tips">Tips for Solving Code Challenges</a></p>
        <hr>
        <h3>Challenges List</h3>
        <div class="accordion  mb-5" id="accordionFlushExample">
          <!-- Section 1 -->
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                  Section 1 - Programming Basics
                </button>
              </h2>
              <div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">
                  <p><a href="./1-1-chain-letter">Challenge 1.1 - Chain Letter</a></p>
                  <p><a href="./1-2-mad-lib">Challenge 1.2 - Mad Lib</a></p>
                  <p><a href="./1-3-mi-to-km">Challenge 1.3 - Miles to Kilometers Calculator</a></p>
                  <p><a href="./1-4-celsius-to-fahrenheit">Challenge 1.4 - Celsius to Fahrenheit Calculator</a></p>
                  <p><a href="./1-5-tip-calculator">Challenge 1.5 - Tip Calculator</a></p>
                  <p><a href="./1-6-height-to-inches">Challenge 1.6 - Height Converter</a></p>
                  <p><a href="./1-7-change-calculator">Challenge 1.7 - Change Calculator</a></p>
                  <p><a href="./1-8-line-slope">Challenge 1.8 - Line Slope Calculator</a></p>
                  <p><a href="./1-9-time-display">Challenge 1.9 - Time Display</a></p>
                  <p><a href="./1-10-fuel-calculator">Challenge 1.10 - Fuel Calculator</a></p>
                  <p><a href="./1-11-area-circle">Challenge 1.11 - Circle Area Calculator</a></p>
                </div>
              </div>
            </div>
            <!-- Section 2 -->
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                  Section 2 - Control Flow
                </button>
              </h2>
              <div id="flush-collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">
                  <p><a href="./2-1-magic-8-ball">Challenge 2.1 - Magic 8-Ball</a></p>
                  <p><a href="./2-2-quadratic-equation">Challenge 2.2 - Quadratic Equation</a></p>
                  <p><a href="./2-3-dungeon-crawler">Challenge 2.3 - Dungeon Crawler</a></p>
                  <p><a href="./2-4-fizz-buzz">Challenge 2.4 - FizzBuzz</a></p>
                  <p><a href="./2-5-atm-validation">Challenge 2.5 - ATM Validation</a></p>
                  <p><a href="./2-6-heads-or-tails">Challenge 2.6 - Heads or Tails</a></p>
                  <p><a href="./2-7-coin-flip-simulator">Challenge 2.7 - Coin Flip Simulator</a></p>
                </div>
              </div>
            </div>
            <!-- Section 3 -->
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseThree" aria-expanded="false" aria-controls="flush-collapseThree">
                  Section 3 - Data Structures
                </button>
              </h2>
              <div id="flush-collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">
                  <p><a href="./3-1-raffle">Challenge 3.1 - Raffle</a></p>
                  <p><a href="./3-2-sample-data">Challenge 3.2 - Sample Data Generator</a></p>
                </div>
              </div>
            </div>
            <!-- Section 4 -->
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseFour" aria-expanded="false" aria-controls="flush-collapseFour">
                  Section 4 - Functions
                </button>
              </h2>
              <div id="flush-collapseFour" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">
                  <p><a href="./4-1-area-circle-fn">Code Challenge 4.1 - Area of a Circle Function</a></p>
                  <p><a href="./4-2-min-max">Code Challenge 4.2 - Min and Max Finder</a></p>
                  <p><a href="./4-3-celsius-to-fahrenheit-fn">Code Challenge 4.3 - Celsius to Fahrenheit Function</a></p>
                  <p><a href="./4-4-average">Code Challenge 4.4 - Average Finder</a></p>
                </div>
              </div>
            </div>
            <!-- Section 5 -->
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseFive" aria-expanded="false" aria-controls="flush-collapseFive">
                  Section 5 - Object-Oriented Programming
                </button>
              </h2>
              <div id="flush-collapseFive" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">
                  <p><a href="./5-1-rectangle-class">Code Challenge 5.1 - Rectangle Class</a></p>
                  <p><a href="./5-2-student-class">Code Challenge 5.2 - Student Class</a></p>
                </div>
              </div>
            </div>
          </div>
    </div>
</Layout>

<style>
    .accordion-button:not(.collapsed) {
        color: white;
        background-color: var(--bs-primary);;
        box-shadow: inset 0 calc(-1 * var(--bs-accordion-border-width)) 0 var(--bs-accordion-border-color);
    }
</style>
