---
    import Layout from '../../layouts/Layout.astro';
    import RGBColorPicker from '../../components/RGBColorPicker.svelte';
---

<Layout title="RGB Color Picker">
    <div class="container">
        <div class="row justify-content-center align-items-center my-5">
            <div class="col-auto">
                <img src="/utilities/rgb-icon.png" class="img-title" />
            </div>
            <div class="col-auto">
                <h1 class="text-center display-5">RGB Color Picker</h1>
            </div>
        </div>
        <div class="row mb-5">
            <div class="col-sm-12 col-md-6 offset-md-3 p-1">
                <RGBColorPicker client:load />
            </div>
        </div>
    </div>
</Layout>

<style>
    .img-title {
        max-width: 125px;
    }
</style>